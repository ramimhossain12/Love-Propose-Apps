<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:weightSum="4"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Will you be my life partner ?"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ht"/>





        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Name + Your Partner Name: "
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/nameEditTextID"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Propose Letter : "
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textColorHint="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/massegeEditTextID"
            android:textSize="17sp"
            android:textStyle="bold"/>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:orientation="horizontal">


           <Button

               android:layout_width="160dp"
               android:layout_marginTop="22dp"
               android:layout_height="match_parent"

               android:backgroundTint="#4CAF50"
               android:textColor="#ffff"
               android:textSize="15dp"
               android:text="Yes OF Crouse"
               android:id="@+id/yesbtnID"
               />

           <Button
               android:layout_width="160dp"
               android:layout_marginTop="22dp"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
               android:textSize="15dp"
               android:text="No"
               android:backgroundTint="#E91E63"
               android:textColor="#FFFCFC"
               android:id="@+id/nobtnID"

               />


       </LinearLayout>



        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lottie_fileName="hm.json"
            android:scaleType="fitCenter"
            app:lottie_autoPlay="true"
            android:layout_centerInParent="true"
            app:lottie_loop="true"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

</ScrollView>